{
  "name": "workspace",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm --stream -r build",
    "build:watch": "pnpm --stream -r build:watch",
    "chore:changeset": "changeset",
    "chore:lint": "pnpm chore:lint:prettier && pnpm chore:lint:eslint",
    "chore:lint:eslint": "eslint --fix './**/*.{js,json,yaml}'",
    "chore:lint:prettier": "prettier --write --plugin-search-dir=. ./",
    "ci:publish": "pnpm build && changeset publish",
    "ci:publish:snapshot": "pnpm build && changeset publish --tag snapshot",
    "ci:version": "changeset version",
    "ci:version:snapshot": "changeset version --snapshot snapshot",
    "ddddurk": "ddddurk",
    "droplet": "node ./packages/droplet/dist/index.js",
    "prepare": "husky install",
    "test": "pnpm --stream -r test",
    "test:typecheck": "pnpm --stream -r test:typecheck",
    "test:watch": "pnpm --stream -r test:watch"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.14",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@ddddurk/cli": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.3",
    "typescript": "^5.0.4"
  }
}
